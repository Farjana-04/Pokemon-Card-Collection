
      <h2>Pokemon Card Search</h2>
      <form action="/search" method="GET">
        <input class="text-box" type="text" name="name" placeholder="Enter Pokemon Name">
        <button class="submit-btn" type="submit">Search</button>
      </form>
      <div class="card-list">
        
        {{#each cards as | card |}}
            <div class="card">
              <img src="{{card.images.small}}" alt="{{card.name}}">
            </div>
            
            {{#if ../logged_in}}
            <div>
              <button class="add-to-binder-btn" data-card-id="{{card.id}}" data-card-name="{{card.name}}" data-card-image="{{card.images.small}}">Add to Binder</button>
            </div>
            {{/if}}
          {{/each}}
        
      </div>

     <script src="js/binder.js"></script>